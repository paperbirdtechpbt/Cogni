<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
<!--            <stroke android:width="1dip" android:color="#2196F3" />-->
            <gradient android:angle="-90" android:startColor="#007BFF" android:endColor="#2196F3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
<!--            <stroke android:width="1dip" android:color="#2196F3" />-->
            <solid android:color="#007BFF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
<!--            <stroke android:width="1dip" android:color="#2196F3" />-->
            <gradient android:angle="-90" android:startColor="#9BCEF6" android:endColor="#007BFF" />
        </shape>
    </item>
</selector>