<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent" />

            <item
                android:left="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:top="5dp"/>
        </shape>


    </item>

    <item android:top="-25dp" android:right="-25dp" android:left="-25dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:dashGap="0px"
                android:dashWidth="10px"
                android:width="1dp"
                android:color="#DAD9D9" />
        </shape>
    </item>

</layer-list>