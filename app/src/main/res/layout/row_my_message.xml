<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">
<ImageView

    android:layout_margin="10dp"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:background="#F4D4C8"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/backgroundcon"
    tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Message"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintTop_toTopOf="@id/backgroundcon"
            app:layout_constraintBottom_toBottomOf="@id/backgroundcon"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="@id/backgroundcon"
            app:layout_constraintRight_toRightOf="@id/backgroundcon"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvTimeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="20-04-2016 9:55 PM"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvMessage"
            app:layout_constraintLeft_toLeftOf="@id/backgroundcon"
            app:layout_constraintRight_toRightOf="@id/backgroundcon"

            android:textSize="8sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
