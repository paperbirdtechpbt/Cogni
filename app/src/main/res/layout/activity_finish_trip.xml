<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHorizontal_chainStyle="packed"
    tools:context=".fragment.Finish.FinishMapsFragment">

    <TextView
        android:id="@+id/finish_totalmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 3000/-"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/finish_recyclerview" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/finish_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finish_mapview"
        tools:itemCount="3"
        tools:listitem="@layout/item_total_expense" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:background="@drawable/border"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/route"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/itemRow_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2FBF9F9"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/txtLine"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_below="@+id/greenicon"
                android:layout_alignStart="@+id/greenicon"
                android:layout_alignEnd="@+id/greenicon"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/shap_dotted"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/redicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/txtLine"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/circle_green"
                android:backgroundTint="#F30303"
                android:drawableTint="#fff" />


            <TextView
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/redicon"
                android:layout_alignBottom="@+id/redicon"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="1dp"
                android:layout_toEndOf="@+id/txtLine"
                android:fontFamily="@font/droidsans"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/destination"
                android:layout_below="@+id/origin"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/txtLine"
                android:background="@drawable/shape_line" />

            <TextView
                android:id="@+id/origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/greenicon"
                android:layout_alignBottom="@+id/greenicon"
                android:layout_marginStart="7dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="1dp"
                android:layout_toEndOf="@+id/txtLine"
                android:fontFamily="@font/droidsans"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/greenicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/circle_green" />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
