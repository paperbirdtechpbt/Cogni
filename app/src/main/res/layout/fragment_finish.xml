<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Finish.FinishFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/itemRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">



            <TextView
                android:id="@+id/txtLine"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_below="@+id/greenicon"
                android:layout_alignStart="@+id/greenicon"
                android:layout_alignEnd="@+id/greenicon"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/shap_dotted" />

            <TextView
                android:id="@+id/redicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/txtLine"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/circle_green"
                android:backgroundTint="#F30303"
                android:drawableTint="#fff" />


            <TextView
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/redicon"
                android:layout_alignBottom="@+id/redicon"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="0dp"

                android:layout_marginBottom="1dp"
                android:layout_toEndOf="@+id/txtLine"
                android:fontFamily="@font/droidsans"
                android:text="EndLocation---Nadiad"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/destination"
                android:layout_below="@+id/origin"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/shape_line"
                android:layout_toEndOf="@+id/txtLine" />

            <TextView
                android:id="@+id/origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/greenicon"
                android:layout_alignBottom="@+id/greenicon"
                android:layout_marginStart="7dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="1dp"
                android:layout_toEndOf="@+id/txtLine"
                android:fontFamily="@font/droidsans"
                android:text="StartLocation---Ahmedabad"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/greenicon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/circle_green" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    <fragment
        android:id="@+id/finish_imageview"
        app:layout_constraintTop_toBottomOf="@id/itemRow"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:background="@drawable/border"
        android:src="@drawable/route" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/finish_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        tools:listitem="@layout/item_total_expense"
        tools:itemCount="3"
        app:layout_constraintTop_toBottomOf="@id/finish_imageview"
        app:layout_constraintBottom_toTopOf="@id/finish_totalmoney"/>

    <TextView
        android:id="@+id/finish_totalmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/finish_recyclerview"
        android:text="Total: 25000/-"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
     />

</androidx.constraintlayout.widget.ConstraintLayout>