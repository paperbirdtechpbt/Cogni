<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chatbg"
        tools:context=".activity.chat.ChatActivity">


        <ListView
            android:id="@+id/listview_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rlmessage"
            android:layout_below="@+id/tol"
            android:layout_marginBottom="@dimen/_3sdp"
            android:clipToPadding="false"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll" />

        <RelativeLayout
            android:id="@+id/rlmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">


            <ImageView
                android:id="@+id/btnSendMessage"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/ic_send"
                android:onClick="@{(v)->ChatViewModel.sendMessage(v)}" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btnSendMessage"
                android:background="@drawable/round">

                <EditText
                    android:id="@+id/ed_MessageBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:layout_toStartOf="@+id/imgAttachFile"
                    android:background="@android:color/transparent"
                    android:hint="Type a message"
                    android:onTextChanged="@{ChatViewModel.onMesageTextChanged}"
                    android:padding="@dimen/_8sdp"
                    android:singleLine="true"
                    android:text="@={ChatViewModel.message}"
                    android:textColor="@color/white"
                    android:textColorHint="#c9c7c7" />

                <ImageView
                    android:id="@+id/imgAttachFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/ic_attach_file"
                    android:backgroundTint="@color/white"
                    android:onClick="@{(v)->ChatViewModel.captureImage(v)}" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlImageSend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:visibility="@{ChatViewModel.isVisiBled() ? View.VISIBLE: View.GONE}" >
<ProgressBar
    android:id="@+id/progressbar_imageupload"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txtClose"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="-2dp"

                    android:layout_marginTop="-2dp" />

                <ImageView
                    android:id="@+id/btnSendImage"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_send"
                    android:onClick="@{(v)->ChatViewModel.sendImageToChat(v)}" />

                <TextView
                    android:id="@+id/txtClose"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_close">

                </TextView>
            </RelativeLayout>

        </RelativeLayout>


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_700">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_back" />

                <ImageView
                    android:id="@+id/imgTeacherImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/back_arrow"
                    android:src="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/txtTeacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imgTeacherImage"
                    android:gravity="center"
                    android:text="@={ChatViewModel.reciverName}"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtTyping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtTeacherName"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imgTeacherImage"
                    android:gravity="center"
                    android:text="@={ChatViewModel.isTyping}"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>


    <data>
        <import type="android.view.View"/>
        <variable
            name="ChatViewModel"
            type="com.pbt.cogni.viewModel.ChatViewModel" />
    </data>
</layout>