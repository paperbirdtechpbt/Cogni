<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E96E3"
    tools:context=".activity.ResetPassword.ResetPassword">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="30dp"
        android:layout_marginBottom="25dp"
        android:alpha=".15"
        android:src="@drawable/track_one"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reset_constraint"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/label_reserpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reset_constraint"
       android:layout_marginBottom="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="23sp"
        android:text="Reset Password"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reset_constraint"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".76"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/layout_design">

        <RelativeLayout
            android:id="@+id/rlresetPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_rigth_curv"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rlPassword"
            tools:ignore="MissingConstraints">


            <EditText
                android:id="@+id/resetedpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/resettxtPassword"
                android:background="#F6F6F6"
                android:hint="@string/enter_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"

                app:passwordToggleEnabled="true" />

            <TextView
                android:id="@+id/resettxtPassword"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_left_curv"
                android:drawableLeft="@drawable/ic_password"
                android:drawableTint="@color/white"
                android:paddingStart="10dp"
                android:paddingLeft="0dp" />

            <TextView
                android:id="@+id/resettxtPasswordToggel"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/rlresetPassword"
            app:layout_constraintBottom_toTopOf="@+id/rlEmail"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"

            android:background="@drawable/button_rigth_curv"
            tools:layout_editor_absoluteX="16dp">


            <EditText
                android:id="@+id/edPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/txtPassword"
                android:background="#F6F6F6"
                android:hint="@string/reenter_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                app:passwordToggleEnabled="true" />

            <TextView
                android:id="@+id/txtPassword"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_left_curv"
                android:drawableLeft="@drawable/ic_password"
                android:drawableTint="@color/white"
                android:paddingStart="10dp"
                android:paddingLeft="0dp" />

            <TextView
                android:id="@+id/txtPasswordToggel"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_rigth_curv"
            app:layout_constraintTop_toBottomOf="@+id/rlPassword"
            app:layout_constraintBottom_toTopOf="@+id/btn_resetPassword"
            tools:layout_editor_absoluteX="16dp">

            <EditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/txtEmail"
                android:background="#F6F6F6"
                android:hint="@string/enter_username"
                android:imeOptions="actionNext"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_left_curv"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:paddingStart="15dp"
                android:paddingLeft="10dp" />

        </RelativeLayout>
        <Button
            android:id="@+id/btn_resetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            style="@style/style_button"
            app:layout_constraintTop_toBottomOf="@+id/rlEmail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Submit"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>