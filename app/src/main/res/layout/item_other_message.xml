<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="start"
        app:cmv_arrowMargin="8dp"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="#FDFEFE"
        app:cmv_backgroundColorPressed="#FDFEFE"
        app:cmv_contentPadding="8dp"
        app:cmv_cornerRadius="12dp"
        app:cmv_showArrow="true">

<!--       chat text message content-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llChatTextMessage"
            android:visibility="gone"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:maxWidth="@dimen/_200sdp"
                android:layout_below="@+id/image"
                android:textColor="#000" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_toEndOf="@+id/text"
                android:gravity="bottom"
                android:textColor="#605F5F"
                android:textSize="8sp" />
        </LinearLayout>
<!--    chat file content-->
         <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/llDocs"
                android:visibility="gone"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:background="@drawable/bg_button"
                    android:backgroundTint="#F7F7F7">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/ic_file"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/greay"
                        android:id="@+id/imgDocs"/>

                    <TextView
                        android:id="@+id/txtFileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/imgDownload"
                        android:layout_toEndOf="@+id/imgDocs"
                        android:textColor="@color/greay" />
                  

                    <ImageView
                        android:id="@+id/imgDownload"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:visibility="visible"
                        android:background="@drawable/ic_download"
                        android:backgroundTint="@color/greay" />

                    <ProgressBar
                        android:id="@+id/download_progressbar"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                      android:indeterminateOnly="false"
                        android:layout_marginRight="8dp"
                        android:progress="10"
                        android:progressDrawable="@drawable/circle_download"
                        android:visibility="gone" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="png"
                        android:textColor="@color/greay"
                        android:textSize="8sp"
                        android:id="@+id/txtFileType"
                        android:gravity="start"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="end"
                        android:id="@+id/txtTimeStamp"
                        android:textColor="@color/greay"
                        android:textSize="8sp"
                        />
                </RelativeLayout>

            </LinearLayout>
<!--chat image message content-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llImageMessage"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:background="@drawable/bg_button"
                android:backgroundTint="#F7F7F7">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgMessage"
                  />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#605F5F"
                    android:textSize="8sp"
                    android:id="@+id/txtFileTypeImage"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:id="@+id/txtImageTimeStamp"
                    android:textColor="#605F5F"
                    android:textSize="8sp"
                    />
            </RelativeLayout>

        </LinearLayout>

    </me.himanshusoni.chatmessageview.ChatMessageView>

</LinearLayout>
