<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cogni" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/fontColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>





    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/lowBlue</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimary">#F44336</item>
        <item name="colorSecondary">#E91E63</item>
        <item name="colorPrimaryDark">@color/fontBlue</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/fontColor</item>
        <item name="colorAccent">@color/purple_700</item>
    </style>


    <style name="style_button">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/design_btn</item>
    </style>

        <style name="CallActivityTheme" parent="android:Theme.Material">
            <item name="android:windowActionBar">false</item>
            <item name="android:windowFullscreen">true</item>
            <item name="android:windowNoTitle">true</item>
        </style>

    <!--Edit Text-->
    <style name="Spinner" >
        <item name="android:textColor">@color/lowBlue</item>
        <item name="android:textSize">@dimen/_12sdp</item>
<!--        <item name="android:textColor"></item>-->
    </style>
    <style name="style_Edittext">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/design_edittext</item>
    </style>

